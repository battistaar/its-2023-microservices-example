{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@architecture-microservices/Notification": [
        "libs/notification/src/index.ts"
      ],
      "@core/event-utils": ["libs/utils/event-utils/src/index.ts"],
      "@event/client": ["libs/payment/event-client/src/index.ts"],
      "@order/config": ["libs/order/config/src/index.ts"],
      "@order/event-client": ["libs/order/event-client/src/index.ts"],
      "@order/events": ["libs/order/events/src/index.ts"],
      "@shipment/config": ["libs/shipment/config/src/index.ts"],
      "@shipment/event-client": ["libs/shipment/event-client/src/index.ts"],
      "@shipment/events": ["libs/shipment/events/src/index.ts"],
      "@payment/config": ["libs/payment/config/src/index.ts"],
      "@payment/events": ["libs/payment/events/src/index.ts"],
      "@payment/event-client": ["libs/payment/event-client/src/index.ts"],
      "@warehouse/message-client": ["libs/warehouse/message-client/src/index.ts"],
      "@warehouse/config": ["libs/warehouse/config/src/index.ts"],
      "@warehouse/event-client": ["libs/warehouse/event-client/src/index.ts"],
      "@warehouse/events": ["libs/warehouse/events/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
